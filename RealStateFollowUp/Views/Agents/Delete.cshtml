@model RealStateFollowUp.Models.Agent

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>מחיקת סוכן</h2>
<br />

<form asp-action="Delete">
    <div class="form-border">
        <input type="hidden" asp-for="ID" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="LastName" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="FirstName" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="FirstName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="IdentityCard" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="IdentityCard" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Email" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Phone" class="control-label"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Phone" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <input type="submit" value="מחק" class="btn btn-danger" /> &nbsp;
            <a asp-action="Index" class="btn btn-success">חזור</a>
        </div>
    </div>
</form>
