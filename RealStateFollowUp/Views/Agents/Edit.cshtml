@model RealStateFollowUp.Models.Agent

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>עדכון סוכן</h2>
<br />

<form asp-action="Edit">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IdentityCard" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="IdentityCard" class="form-control" />
            </div>
            <span asp-validation-for="IdentityCard" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Phone" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="עדכן" class="btn btn-primary" /> &nbsp;
            <a asp-action="Index" class="btn btn-success">חזור</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
