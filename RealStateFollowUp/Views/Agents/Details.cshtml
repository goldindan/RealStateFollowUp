@model RealStateFollowUp.Models.Agent

@{
    ViewData["Title"] = "Details";
}

<br />
<h2>סוכן</h2>
<br />

<div class="form-border">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="FirstName" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IdentityCard" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="IdentityCard" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Phone" class="custom-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Phone" class="form-control" />
            </div>
        </div>
    </fieldset>

    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">עדכון</a>
        <a asp-action="Index" class="btn btn-success">חזור</a>
    </div>
</div>