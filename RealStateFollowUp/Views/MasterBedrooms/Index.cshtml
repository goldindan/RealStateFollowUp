@model IEnumerable<RealStateFollowUp.Models.MasterBedroom>

@{
    ViewData["Title"] = "Index";
}

<br />
<h2>סוגי חדר הורים</h2>
<hr />
<p>
    @await Html.PartialAsync("_CreateButtonPartial")
</p>
<div class="form-border">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayOrder)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    @await Html.PartialAsync("_TableButtonPartial", item.ID)
                </tr>
            }
        </tbody>
    </table>
</div>
