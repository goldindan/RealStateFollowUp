@model RealStateFollowUp.Models.Client

@{
    ViewData["Title"] = "Create";
}

<br />
<h2>לקוח חדש</h2>
<hr />

<form asp-action="Create">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IdentityCard" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="IdentityCard" class="form-control" />
            </div>
            <span asp-validation-for="IdentityCard" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="City" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="City" class="form-control" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Street" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Street" class="form-control" />
            </div>
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="StreetNum" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="StreetNum" class="form-control" />
            </div>
            <span asp-validation-for="StreetNum" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Appartment" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Appartment" class="form-control" />
            </div>
            <span asp-validation-for="Appartment" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Notes" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Notes" class="form-control" />
            </div>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="שמור" class="btn btn-primary" /> &nbsp;
            <a asp-action="Index" class="btn btn-success">חזור</a>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
